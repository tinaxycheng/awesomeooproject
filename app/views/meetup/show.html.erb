<body id="page-top" data-spy="scroll" data-target=".navbar-fixed-top">


<!-- Navigation -->
<%= render 'shared/nav' %>
<br><br><br><br><br><br>


 <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="post-preview">
                <ul class="navbar-custom">
                <h4>My event's information</h4>
                        <h4 class="post-title">
                        Title: <%= @meetup.title %>
                        </h4>
                       <p>
                        Time: <%= @meetup.time %>
                        </p>
                        <p>
                        Address: <%= @meetup.formatted_address %>
                        </p>
                        <p>
                        Description: <%= @meetup.description %>
                        </p>
                 
                    <%= link_to edit_meetup_path do%>
                    <p class="btn btn-default btn-lg">Edit</p>
                    <%end%>
                    <%= link_to meetup_path(@meetup), method: "DELETE" do%>
                    <p class="btn btn-default btn-lg">Delete</p>
                    <%end%>
                    </ul>
                </div>
            </div>
        </div>
   </div>

