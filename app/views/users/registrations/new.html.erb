
<div class="limiter">
            <div class="container-login100">
                <div class="wrap-login100">
                    <div class="login100-form validate-form p-l-55 p-r-55 p-t-178">
                       <%= form_for(resource, as: resource_name, url: user_registration_path(resource_name).sub(/\.[\w]*\z/, '')) do |f| %>
                        <span class="login100-form-title" href="#page-top">
                            OOStudio
                        </span>
                        <%= devise_error_messages! %>
                        <div class="wrap-input100 validate-input m-b-16" data-validate="Please enter username">
                            <%= f.email_field :email, autofocus: true, class:"input100", type:"text",placeholder:"Email"%>
                            <span class="focus-input100"></span>
                        </div>

                        <div class="wrap-input100 validate-input" data-validate = "Please enter password">
                            <span class="focus-input100"></span>
                           <%= f.password_field :password, autocomplete: "off", class:"input100", type:"password",placeholder:"Password "%>
                           
                        </div>
                         
                       </br>

                        <div class="wrap-input100 validate-input" data-validate = "Please enter password">
                            <span class="focus-input100"></span>
                            
                             <%= f.password_field :password_confirmation, autocomplete: "off", class:"input100", type:"password",placeholder:"Password confirmation"%>
                        </div>

                        <div class="text-right p-t-10 p-b-10">
                            <% if @minimum_password_length %>
                              <span class="txt1">(<%= @minimum_password_length %> characters minimum)</span>
                              <% end %><br />
                        </div>
                        <div class="container-login100-form-btn">
                              <button class="login100-form-btn">
                                  <%= f.submit "Sign Up", class:'actions login100-form-btn' %>
                              </button>                            
                        </div>
                        <%end%>
                    </div>
                        <div class="container-login100-form-btn ">
                             <%= link_to user_google_oauth2_omniauth_authorize_path do%>
                            <button class="login100-form-btn2">
                                Sign in with Google</button>
                            <%end%>
                        </div> 

                        <div class="flex-col-c p-t-100 p-b-40">
                            <span class="txt1 p-b-9">
                                Already have an account?
                            </span>
                             <div class="container-login100-form-btn ">
                                <%= link_to new_user_session_path do%>
                                <button class="login100-form-btn1">
                                    Sign In</button>
                                <%end%>
                            </div>            
                        </div>   
                    
                </div>
            </div>
        </div>




